<!--Description: Layout for the User Details Page-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="naddateam.truform.GUI.GUI.UserItems.UserDetailsNav"
    android:background="#16a085">
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@id/title"
        />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible"
        android:id="@+id/btnLayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New User"
            android:textColor="#ecf0f1"
            android:id="@+id/btnNew" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Existing User"
            android:textColor="#ecf0f1"
            android:id="@+id/btnExisting" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter Email"
            android:id="@+id/existingLabel"
            android:layout_gravity="center_horizontal"
            android:textColor="#ecf0f1"
            android:visibility="invisible"/>
        <EditText
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/getUser"
            android:layout_gravity="center_horizontal"
            android:textColor="#ecf0f1"
            android:visibility="invisible"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter"
            android:id="@+id/confirmEmail"
            android:layout_gravity="center_horizontal"
            android:textColor="#ecf0f1"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible"
        android:id="@+id/editLayout">


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_width="159dp"
                android:layout_height="450dp"
                android:id="@+id/userDetailsListView"
                android:entries="@array/userDetailsListItems"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ecf0f1"
                android:visibility="visible"
                android:layout_alignRight="@+id/fnameTxt"
                android:layout_alignEnd="@+id/unameTxt" />

    <EditText
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:text="First"
        android:ems="12"
        android:id="@+id/fnameTxt"
        android:paddingTop="15dp"
        android:textColor="#ecf0f1"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="171dp"
        android:layout_height="49dp"
        android:text="Last"
        android:ems="12"
        android:id="@+id/lnameTxt"

        android:paddingTop="15dp"
        android:textColor="#ecf0f1"
        android:layout_gravity="right"
        android:layout_below="@+id/fnameTxt"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="171dp"
        android:layout_height="49dp"
        android:text="\?"
        android:ems="12"
        android:id="@+id/genderTxt"
        android:paddingTop="15dp"
        android:textColor="#ecf0f1"
        android:layout_gravity="right"
        android:layout_below="@+id/lnameTxt"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="171dp"
        android:layout_height="49dp"
        android:inputType="textPersonName"
        android:text="0"
        android:ems="12"
        android:id="@+id/ageTxt"

        android:paddingTop="15dp"
        android:textColor="#ecf0f1"
        android:layout_gravity="right"
        android:layout_below="@+id/genderTxt"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="171dp"
        android:layout_height="49dp"
        android:text="0"
        android:ems="12"
        android:id="@+id/heightTxt"

        android:paddingTop="15dp"
        android:textColor="#ecf0f1"
        android:layout_gravity="right"
        android:layout_below="@+id/ageTxt"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="171dp"
        android:layout_height="49dp"
        android:text="0"
        android:ems="12"
        android:id="@+id/weightTxt"

        android:paddingTop="15dp"
        android:textColor="#ecf0f1"
        android:layout_gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/heightTxt"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="171dp"
        android:layout_height="49dp"
        android:ems="12"
        android:id="@+id/emailTxt"

        android:paddingTop="15dp"
        android:textColor="#ecf0f1"
        android:layout_gravity="right"
        android:layout_below="@+id/weightTxt"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="171dp"
        android:layout_height="49dp"
        android:text="user"
        android:ems="12"
        android:id="@+id/unameTxt"

        android:paddingTop="15dp"
        android:textColor="#ecf0f1"
        android:layout_gravity="right"
        android:layout_below="@+id/emailTxt"
        android:layout_alignParentRight="true" />

        </RelativeLayout>
    </ScrollView>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Insert"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ecf0f1"
            android:layout_gravity="right" />
    </LinearLayout>




</RelativeLayout>
