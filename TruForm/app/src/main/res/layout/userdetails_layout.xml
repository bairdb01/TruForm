<!--Description: Layout for the User Details Page-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="naddateam.truform.GUI.GUI.UserItems.UserDetailsNav">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userDetailsListView"
        android:layout_alignParentTop="true"
        android:entries="@array/userDetailsListItems"
        android:layout_toStartOf="@+id/userDetailBMIView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="12"
        android:id="@+id/userDetailNameEdit"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/userDetailsListView"
        android:layout_toEndOf="@+id/userDetailsListView"
        android:paddingTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="12"
        android:id="@+id/userDetailAgeEdit"
        android:layout_below="@+id/userDetailNameEdit"
        android:layout_toRightOf="@+id/userDetailsListView"
        android:layout_toEndOf="@+id/userDetailsListView"
        android:paddingTop="13dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="12"
        android:id="@+id/userDetailHeightEdit"
        android:layout_below="@+id/userDetailAgeEdit"
        android:layout_toRightOf="@+id/userDetailsListView"
        android:layout_toEndOf="@+id/userDetailsListView"
        android:paddingTop="12dp"
        android:text="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="12"
        android:id="@+id/userDetailWeightEdit"
        android:layout_below="@+id/userDetailHeightEdit"
        android:layout_toRightOf="@+id/userDetailsListView"
        android:layout_toEndOf="@+id/userDetailsListView"
        android:paddingTop="12dp"
        android:text="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Height &amp; Weight"
        android:id="@+id/userDetailBMIView"
        android:layout_below="@+id/userDetailWeightEdit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="11dp" />

</RelativeLayout>
