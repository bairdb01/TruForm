<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <CheckBoxPreference
        android:key="workoutBeepKey"
        android:title="@string/pref_title_workout_beep"
        android:defaultValue="true" />
    <CheckBoxPreference
        android:key="calibrateBeepKey"
        android:title="@string/pref_title_calibrate_beep"
        android:defaultValue="true" />
    <CheckBoxPreference
        android:key="badformBeepKey"
        android:title="@string/pref_title_badform_beep"
        android:defaultValue="true" />
    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
